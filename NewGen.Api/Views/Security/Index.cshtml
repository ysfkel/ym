
@{
    Layout="_LayoutSecurity";
}



<div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3 panel-container">
                 <div class="panel panel-default account">
                  <div class="panel-heading">
                    <h3 class="panel-title">Sign In to Your Account</h3>
                  </div>
                    <div class="panel-body">
                            <form asp-controller="Security" asp-action="Login" method="Post">
                                    <div class="row">
                                        <div class="col-md-7">
                                            <div>
                                              <label for="">Email</label>
                                            </div>
                                            <input type="text" placeholer="your email" class="form-control" >
                                        </div>
                                    </div> 
                                    <div class="row">
                                        <div class="col-md-7">
                                            <div>
                                              <label for="">Password</label>
                                            </div>
                                            <input type="password" placeholer="your password" class="form-control" >
                                        </div>
                                    </div> 
                                    <div class="row">
                                        <div class="col-md-7">
                                           <br>
                                            <input type="submit" value="Sign In" class="btn btn-primary">
                                        </div>
                                    </div> 
                            </form>
                    </div>
                  </div>
          </div>
      </div>
</div>

    